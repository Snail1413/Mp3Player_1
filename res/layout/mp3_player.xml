<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
   
    <TextView
        android:id="@+id/songText"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:gravity="center"
        
	/>
    
    <ImageView
        android:id="@+id/artistIg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#00aa00"
        android:layout_below="@id/songText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/zhang"
    />
    
    <ImageView 
        android:id="@+id/source"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#aa0000"
        android:layout_below="@id/artistIg"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/source"
        />
    
    <ImageView 
        android:id="@+id/songName"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#0000aa"
        android:layout_below="@id/source"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
		android:contentDescription="@string/app_name"
		android:src="@drawable/name"
        />
    
    <SeekBar
          android:id="@+id/seekBar1"
          android:layout_width="fill_parent"
          android:layout_height="10dp"
          android:layout_alignLeft="@+id/songName"
          android:layout_below="@+id/songName"
          android:max="1000"
          android:progress="0" 
          android:layout_marginTop="10dp"
		  android:background="#aa0000"
          />
    
    
      <SeekBar
          android:id="@+id/seekBar2"
          android:layout_width="110dp"
          android:layout_height="7dp"
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/seekBar1"
          android:max="1000"
          android:progress="0" 
          android:layout_marginTop="10dp"
		  android:background="#a00000"
          />
    
    <ImageButton
        android:id="@+id/play"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/seekBar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
   		android:background="@drawable/palyclick"
        />
    
     <ImageButton
         android:id="@+id/previous"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_below="@id/seekBar2"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
         android:layout_toLeftOf="@id/play"
         android:contentDescription="@string/app_name"
         android:background="@drawable/previousclick"
         />
    
      <ImageButton
          android:id="@+id/next"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_below="@id/seekBar2"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_toRightOf="@id/play"
          android:contentDescription="@string/app_name"
          android:background="@drawable/nextclick"
 />
      
      
      <TextView
          android:id="@+id/artistText"
          android:layout_width="200dp"
          android:layout_height="25dp"
          android:layout_toRightOf="@id/artistIg"
          
          android:layout_alignTop="@id/artistIg"
          android:layout_marginLeft="5dp"
          
           />
      
      
      <TextView
          android:id="@+id/sourceText"
          android:layout_width="250dp"
          android:layout_height="25dp"
          android:layout_toRightOf="@id/source"
          
          android:layout_alignTop="@id/source"
          android:layout_marginLeft="5dp"
          
           />
      
      <TextView
          android:id="@+id/namText"
          android:layout_width="250dp"
          android:layout_height="25dp"
          android:layout_toRightOf="@id/songName"
         
          android:layout_alignTop="@id/songName"
          android:layout_marginLeft="5dp"
          
           />
      
       
    
      <Spinner
		android:id="@+id/spinnerId"
		android:layout_width="100dp"
		android:layout_height="20dp"
		android:layout_toRightOf="@id/artistText"
		android:layout_marginLeft="15dp"
		android:layout_below="@+id/songText"
		android:layout_marginTop="10dp"
		android:background="#aa0000"
		/>
      
       
       
       
</RelativeLayout>
